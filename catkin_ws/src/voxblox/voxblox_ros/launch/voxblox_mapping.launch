<launch>
  <!-- Voxblox Node -->
  <node name="voxblox_node" pkg="voxblox_ros" type="tsdf_server" output="screen">
    <remap from="pointcloud_topic" to="/point_cloud"/>
    <param name="tsdf_voxel_size" value="0.2"/>
    <param name="tsdf_voxels_per_side" value="16"/>
    <param name="publish_mesh" value="true"/>
    <param name="tsdf_max_range" value="15.0"/> 
    <param name="integrator_threads" value="10"/>
    <param name="use_freespace_pointcloud" value="true"/>
    <param name="voxel_carving_enabled" value="true"/>
    <param name="max_ray_length_m" value="15.0"/>
    <param name="allow_clear" value="true"/>
  </node>

  <!-- Static Transform Publisher -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="true_body_to_world"
        args="0 0 0 -0.7071 0 0 0.7071 true_body point_cloud"/>

  <!-- Relay Voxblox Mesh Topic -->
  <node name="voxblox_mesh_relay" pkg="topic_tools" type="relay"
        args="/voxblox_node/mesh /firefly/voxblox_rrt_planner/mesh" />

</launch>

